<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Basic -->  
  <remote fetch="https://github.com/openembedded" name="oe"/>
  <remote fetch="git://git.openembedded.org" name="oe-core"/>
  <remote fetch="git://git.yoctoproject.org" name="yocto-projects"/>
  <!-- hw specific -->
  <remote fetch="git://git.yoctoproject.org" name="meta-raspberrypi"/>

  <default revision="scarthgap" sync-j="4"/>

  <!-- Basic -->  
  <project name="meta-openembedded" path="sources/meta-openembedded" remote="oe" revision="scarthgap" clone-depth="1"/>
  <project name="poky" path="sources/poky" remote="yocto-projects" revision="scarthgap" clone-depth="1"/>
  <project name="openembedded-core" path="sources/meta-openembedded-core" remote="oe-core" revision="scarthgap" clone-depth="1"/>
  <project name="meta-virtualization" path="sources/meta-virtualization" remote="yocto-projects" revision="scarthgap" clone-depth="1"/>
  <project name="meta-selinux" path="sources/meta-selinux" remote="yocto-projects" revision="scarthgap" clone-depth="1"/>
  <!-- hw specific -->
  <project name="meta-raspberrypi" path="sources/meta-raspberrypi" remote="meta-raspberrypi" revision="scarthgap" clone-depth="1"/>
</manifest>
